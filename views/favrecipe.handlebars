
{{!-- {{#if user}} --}}

<link rel="stylesheet" type="text/css" href="/css/favrecipe.css">
<h1 class="title is-2">
  Welcome back {{user.name}} !
</h1>

<h2 class="subtitle is-4">
  <span> Total Consumption </span> <br>
  {{totalCalories}} <br>
  {{totalTime}}
</h2>

<h2 class="subtitle is-4">
  <span>Planned Meals</span>
</h2>
  <table>
    <tr>
      <th>Name</th>
      <th>Calories</th>
      <th>Time Required</th>
      <th>Ingredients Required</th>
      <th>Cooking Notes</th>
      <th> </th>
    </tr>

    {{#each dbitems as |recipe|}}
    <tr>
      <td>{{recipe.name}}</td>
      <td class='calories'>{{recipe.calories}}</td>
      <td>{{recipe.timeDisplay}}</td>
      <td>
        <ul>
          {{#each recipe.ingredients as |ingredient|}}
            <li> {{ingredient}} </li>
          {{/each}}
        </ul>
      </td>
      <td>
        {{recipe.cookingnotes}}
      </td>
      <td>
          <button id='edit' value='{{recipe.id}}'>edit</button>
      </td>
    </tr>

    {{!-- <button id='addMeal'>Add To Weekly Meals</button> --}}
    {{/each}}
  </table>

  <form action='/favrecipe/removeAll' method=post >
    <button id=delete>DELETE ALL RECIPES</button>
  </form>

  <button><a href='/userAuth/logout'>LOG OUT</a></button>

